extends base

block content
    h3 resetPassword
        form.box.form--resetPassword
            .form-el
                label(for='password') Password
                input#password(type='password' placeholder='new password')
            .form-el
                label(for='passwordConfirm') PasswordConfirm
                input#passwordConfirm(type='passwordConfirm' placeholder='new password confirm')
            .form-el
                button.update-btn(type="submit") change